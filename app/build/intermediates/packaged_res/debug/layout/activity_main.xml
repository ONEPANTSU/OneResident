<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/residentButton"
        android:layout_width="274dp"
        android:layout_height="90dp"
        android:background="@drawable/round_style"
        android:backgroundTint="@color/defolt"
        android:drawableStart="@drawable/resident"
        android:drawablePadding="-40dp"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:onClick="onResidentActivity"
        android:paddingStart="20dp"
        android:text="@string/tenants"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@+id/paymentButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        tools:ignore="RtlSymmetry" />

    <Button
        android:id="@+id/paymentButton"
        android:layout_width="274dp"
        android:layout_height="90dp"
        android:background="@drawable/round_style"
        android:backgroundTint="@color/defolt"
        android:drawableStart="@drawable/payment"
        android:drawablePadding="-90dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:onClick="onPaymentActivity"
        android:paddingStart="20dp"
        android:text="@string/payment"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/residentButton"
        tools:ignore="RtlSymmetry" />

    <Button
        android:id="@+id/historyButton"
        android:layout_width="274dp"
        android:layout_height="90dp"
        android:background="@drawable/round_style"
        android:backgroundTint="@color/defolt"
        android:drawableStart="@drawable/history_payment"
        android:layout_marginTop="20dp"
        android:onClick="onHistoryActivity"
        android:paddingStart="20dp"
        android:text="@string/payment_history"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/paymentButton"
        android:drawablePadding="-10dp"
        tools:ignore="RtlSymmetry" />

    <Button
        android:id="@+id/settingsButton"
        android:layout_width="274dp"
        android:layout_height="90dp"
        android:background="@drawable/round_style"
        android:backgroundTint="@color/defolt"
        android:drawableStart="@drawable/settings"
        android:drawablePadding="-50dp"
        android:layout_marginTop="20dp"
        android:onClick="onSettingsActivity"
        android:paddingStart="20dp"
        android:text="@string/settings"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/historyButton"
        tools:ignore="RtlSymmetry" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/logo"
        android:layout_marginTop="50dp"
        app:layout_constraintBottom_toTopOf="@+id/residentButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription" />

</androidx.constraintlayout.widget.ConstraintLayout>