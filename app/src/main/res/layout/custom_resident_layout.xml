<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/residentTextView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/residentDeleteButton"
        android:layout_toStartOf="@+id/residentDeleteButton"
        android:text="Some text"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/residentDeleteButton"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/residentTextView"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:text="X"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="361dp"
        tools:layout_editor_absoluteY="0dp" />

</androidx.constraintlayout.widget.ConstraintLayout>